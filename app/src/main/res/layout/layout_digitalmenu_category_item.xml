<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:background="?android:selectableItemBackground"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/DigitalMenuCategoryImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/all"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toTopOf="@id/DigitalMenuCategoryName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DigitalMenuCategoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text="Biriyani"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@id/digitalmenu_selection_status" />

    <View
        android:id="@+id/digitalmenu_selection_status"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:background="@color/urbanMealsGrey"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
